<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="The Times Newswire API"
        android:textAlignment="center"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:textAlignment="center"
            android:text="Con la API de Times Newswire, puede obtener enlaces y metadatos para los artículos de Times tan pronto como se publiquen en NYTimes.com. La API de Times Newswire proporciona un flujo de artículos publicados actualizado al minuto."
            android:textSize="18sp" />




    </LinearLayout>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="CONECTAR"
        android:textSize="24sp"
        app:rippleColor="#F8F5F5" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="LISTAR"
        android:textSize="24sp" />



    <TextView
        android:id="@+id/txtShow"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:text="Estado de conexion a la API" />

</LinearLayout>